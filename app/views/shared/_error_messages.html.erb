<% if object.errors.any? %>
    <div id="error_explanation">
      <dib class="alert alert-danger">
        The fom contains <%= pluralize(object.errors.count, "error") %>
      </dib>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
        <li> <%= msg %>        </li>
        <% end %>
      </ul>
    </div>

<% end %>